<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        AutomationProperties.AutomationId="main">
    <Grid>

        <Button Content="{Binding valider}" Height="23" HorizontalAlignment="Left" Margin="57,94,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" AutomationProperties.AutomationId="valider" />

        <Label Content="{Binding text}" Height="28" HorizontalAlignment="Left" Margin="43,40,0,0" Name="label1" VerticalAlignment="Top"  />

        <TextBox x:Name="tb_input" Height="23" HorizontalAlignment="Left" Margin="147,42,0,0" VerticalAlignment="Top" Width="120" IsEnabled="True" IsReadOnly="False" Text="" AutomationProperties.AutomationId="labelText" />

        <Label Height="28" HorizontalAlignment="Left" Margin="74,184,0,0" Name="lab_affichage" VerticalAlignment="Top" Width="341" FontWeight="Bold" />



    </Grid>
</Window>
